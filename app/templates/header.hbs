<nav class="navbar-fixed-top header-nav" role="navigation">
  <div class="container">
    <div class="row">
      <div class="col-xs-5 col-sm-4 col-md-3 col-lg-2">
        {{#link-to 'application' class="navbar-brand"}}exsules{{/link-to}}
      </div>

      {{#if session.isAuthenticated}}
        <div class="col-md-5 col-lg-6 search search--header">
          <div class="search-inner">
            {{input value=search placeholder="Search for people and pages"}}
          </div>
        </div>
      {{/if}}

      <div class="col-xs-7 col-sm-8 header-buttons col-lg-4 col-md-4">
        <ul class="nav navbar-nav pull-right">
          {{#if session.isAuthenticated}}
            <li>{{#link-to 'index'}}Home{{/link-to}}</li>
            <li><a href="#"><i class="ti-email"></i></a></li>
            {{notifications-list data=session.currentUser.notifications}}
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" class="my-account">
                <img src="{{session.currentUser.photo.tiny}}">
                <span class="username">{{session.currentUser.fullName}}</span></a>
              <ul class="dropdown-menu my-account-dropdown" role="menu">
                {{#if session.currentUser.admin}}
                  <li>{{#link-to 'admin'}}{{t "admin.title"}}{{/link-to}}</li>
                {{/if}}
                <li>{{#link-to 'user' session.currentUser.username}}Profile{{/link-to}}</li>
                <li>{{#link-to 'settings'}}Settings{{/link-to}}</li>
                <li><a href="#" {{action "invalidateSession"}}>Logout</a></li>
              </ul>
            </li>
          {{else}}
            <li>{{#link-to 'login'}}Login{{/link-to}}</li>
            <!--<li>{{#link-to 'join'}}Register{{/link-to}}</li>-->
          {{/if}}
        </ul>
      </div>
    </div>
  </div>
</nav>

